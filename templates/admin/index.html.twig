{% extends 'base.html.twig' %}

{% block title %} Page Admin {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3> <b><u> Liste Utilisateurs </u></b> </h3>
        <ul>
            {% for user in users %}
                <li>
                    <a href="{{ path("userby",{'firstname':user.firstname}) }}"> {{user.firstname}}  -  {{user.lastname}} </a> 
                </li>
            {% endfor %}
        </ul>
    <hr />

    <h3> <b><u> Liste Articles </u></b> </h3>
        <ul>
            {% for article in articles %}
                <li>
                    <a href="{{ path("articleBy",{'id':article.id}) }}"> {{article.name}} </a> -  {{article.createdAt|date}}
                </li>
            {% endfor %}
        </ul>
</div>
{% endblock %}
