{% extends 'base.html.twig' %}

{% block title %} Page Article  {% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1> La liste d'articles </h1>
    <ul>
        {% for article in articles %}
            <li>
                {{article.id}}  - {{article.name}}  <a href="{{ path("articleBy",{'id':article.id}) }}"> {{ (is_granted('IS_AUTHENTICATED_FULLY')) ? "Edit" : "Show" }} </a>
            </li>
        {% endfor %}
    </ul>
    <hr />
</div>
{% endblock %}
