{% extends 'base.html.twig' %}

{% block title %} {{ article.name }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

 <div class="example-wrapper">
    <h1> {{ article.name }} </h1> <br />
    <span> Publi√© par {{article.user.firstname}} {{article.user.lastname}}</span>
    <br />
    <span> Date de publication {{ (article.createdAt is empty) ? 'NC' : article.createdAt|date }} </span><br />

    {% if not article.imageUrl is empty %}
        <img src="{{article.imageUrl}}">
    {% endif %}

    <p> {{ article.content}} </p>

    <hr />
 {% if is_granted('IS_AUTHENTICATED_FULLY') %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }} 
    
{% endif %}
</div>
{% endblock %}